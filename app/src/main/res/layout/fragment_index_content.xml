<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.langdexuming.jadeapp.IndexContentFragment"
    android:orientation="vertical">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="直接呼叫"
        android:textColor="@color/primary_text"
        android:textSize="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ip_editText"
            android:layout_weight="9"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/dock_icon_service2x" />


    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="最近通信的设备"
        android:textColor="@color/primary_text"
        android:textSize="24dp"/>
    <com.example.langdexuming.jadeapp.MyListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/city"
        android:id="@+id/recently_listView"
        >

    </com.example.langdexuming.jadeapp.MyListView>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="我的设备"
        android:textColor="@color/primary_text"
        android:textSize="24dp"
        />
    <com.example.langdexuming.jadeapp.MyListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/city"
        android:id="@+id/all_listView">

    </com.example.langdexuming.jadeapp.MyListView>


</LinearLayout>
