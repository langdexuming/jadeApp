<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.langdexuming.jadeapp.fragment.content.IndexContentFragment"
    android:orientation="vertical">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="直接呼叫"
        android:textColor="@color/primary_text"
        android:textSize="24dp"
        android:background="@color/brown" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="管理中心"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="拨号呼叫"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/dock_icon_service2x"
            android:background="@color/icons"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="最近通信的设备"
        android:textColor="@color/primary_text"
        android:textSize="24dp"
        android:background="@color/brown"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRecet">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/machineRecent_1"
                android:src="@drawable/e8x_r0705tp_v_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:onClick="imageButton1Click"/>

            <ImageButton
                android:id="@+id/machineRecent_2"
                android:src="@drawable/e8x_r0705tp_v_room"
                android:layout_column="0"
                android:onClick="imageButton1Click"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/machine_name"
        android:id="@+id/textView"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/machine_name"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />
        </TableRow>
        <View
            android:layout_height="2px"
            android:background="@color/brown" />
    <TableRow>

    <ImageButton
        android:id="@+id/machineRecent_3"
        android:src="@drawable/e8x_r0705tp_v_room"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="imageButton1Click"/>
    </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="@string/machine_name"
        android:id="@+id/textView3"

        android:gravity="center"/>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的设备"
        android:textColor="@color/primary_text"
        android:textSize="24dp"
        android:background="@color/brown"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TableMachine">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/myMachine_21"
                android:src="@drawable/e8x_r0705tp_v_room"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:onClick="imageButton1Click"/>
            <TableLayout>
                <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备名称："
                    android:id="@+id/textView4"
                    android:layout_column="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:text="主卧"
                    android:layout_column="1" />
        </TableRow>
                <View
                    android:layout_height="2px"
                    android:background="@color/brown" />
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="房间信息："
                        android:id="@+id/textView5"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:id="@+id/editText2"
                        android:gravity="left"
                        android:text="珠海市斗门区井岸镇五福花园1栋1单元204房5号室内机"
                        android:layout_column="1"
                        android:singleLine="false"
                        android:maxLength="40" />
                </TableRow>
                <View
                    android:layout_height="2px"
                    android:background="@color/brown" />
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP地址："
                        android:id="@+id/textView6"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
                        android:text="192.168.1.1"
                        android:layout_column="1" />
                </TableRow>
                <View
                    android:layout_height="2px"
                    android:background="@color/brown" />
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAC地址："
                        android:id="@+id/textView7"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText4"
                        android:text="00:00:00:00"
                        android:layout_column="1" />
                </TableRow>


            </TableLayout>

        </TableRow>

        <View
            android:layout_height="2px"
            android:background="@color/brown"/>
    </TableLayout>

</LinearLayout>
