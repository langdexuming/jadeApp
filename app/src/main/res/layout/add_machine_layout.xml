<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.langdexuming.jadeapp.fragment.content.AddMachineFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:text="设备类型："
            android:id="@+id/textView_mac_type"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_column="0" />
        <TableRow
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radio_radiogroup"
                >
            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门口机"
            android:layout_column="0"
                android:textSize="12dp"
                android:id="@+id/radio_machine_door"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="室内机"
                android:layout_column="1"
                android:textSize="12dp"
                android:id="@+id/radio_machine_room" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中心机"
                android:layout_column="2"
                android:textSize="12dp"
                android:id="@+id/radio_machine_center"/>
            </RadioGroup>

        </TableRow>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:text="设备名称："
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="20"
            android:id="@+id/editText_mac_name"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:text="设备地址:"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="20"
            android:id="@+id/editText_mac_loc"
            android:layout_column="1" />
    </TableRow>

</TableLayout>
